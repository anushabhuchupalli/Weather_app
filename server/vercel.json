{
  "version": 2,
  "builds": [
    {
      "src": "server/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server/src/index.js"
    }
  ],
  "headers": [
    {
      "key": "Access-Control-Allow-Origin",
      "value": "*"
    },
    {
      "key": "Access-Control-Allow-Methods",
      "value": "GET, POST, PUT, DELETE, OPTIONS"
    },
    {
      "key": "Access-Control-Allow-Headers",
      "value": "Content-Type, Authorization"
    }
  ],
  "rewrites": [
    {
      "source": "auth/signup",
      "destination": "https://weather-app-backend.vercel.app/auth/signup"
    },
    {
      "source": "auth/login",
      "destination": "https://weather-app-backend.vercel.app/auth/login"
    },
    {
      "source": "auth/forgot-password",
      "destination": "https://weather-app-backend.vercel.app/auth/forgot-password"
    },
    {
      "source": "auth/reset-password/(.*)",
      "destination": "https://weather-app-backend.vercel.app/auth/reset-password/$1"
    },
    {
      "source": "verify",
      "destination": "https://weather-app-backend.vercel.app/verify"
    },
    {
      "source": "logout",
      "destination": "https://weather-app-backend.vercel.app/logout"
    }
  ]
}
